{% extends 'layout.jinja2' %}

{% block title %}Registro - Recetario Web{% endblock %}

{% block content %}
<div class="form-container">
  <h1>Registrarse</h1>

  {% if error %}
    <p class="mensaje-error">{{ error }}</p>
  {% endif %}

  <form method="post" enctype="multipart/form-data" class="formulario">
    <label for="nombre">Nombre de usuario:</label>
    <input type="text" name="nombre" required>

    <label for="email">Email:</label>
    <input type="email" name="email" required>

    <label for="password">Contraseña:</label>
    <input type="password" name="password" required>

    <label for="foto_perfil">Foto de perfil (opcional):</label>
    <input type="file" name="foto_perfil">

    <button type="submit" class="boton-rojo">Registrarse</button>

    <a href="{{ request.route_url('home') }}">
      <button type="button" class="boton-secundario">← Volver al inicio</button>
    </a>
  </form>
</div>
{% endblock %}
